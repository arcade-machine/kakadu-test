.news
  width 34%
  padding 22px 34px
  background-color #777777
  display flex
  flex-direction column
  box-sizing border-box

.news__heading
  font-family "PT Sans", Arial, serif
  font-size 40px
  letter-spacing 0.025em
  font-weight 800
  color #ffffff

.news__list
  padding 0
  margin 0
  list-style none

.news__item
  margin-bottom 30px
  text-align left

.news__date
  padding 0
  margin 0
  margin-bottom 10px
  font-family "PT Sans", Arial, serif
  font-size 14px
  letter-spacing 0.025em
  font-weight 200
  font-style italic
  color #ffffff

.news__title
  padding 0
  margin 0
  font-family "PT Sans", Arial, serif
  font-size 14px
  letter-spacing 0.025em
  font-weight 200
  color #ffffff

.news__archive
  display inline-block
  margin-left auto
  font-family "PT Sans", Arial, serif
  font-size 14px
  letter-spacing 0.025em
  font-weight 200
  color #ffffff

@media (max-width: $tablet)
  .news
    width 100%
    text-align center

  .news__item
    text-align center

  .news__archive
    margin 0 auto