.navigation
  width 100%
  background-color #767676

.navigation__list
  width 100%
  max-width 1010px
  min-height 80px
  padding 0 10px
  margin 0 auto
  display flex
  justify-content space-around
  align-items center
  box-sizing border-box
  list-style none

.navigation__item
  height 100%

  &:last-child .navigation__link::after
    display none

.navigation__link
  padding 0 20px
  font-family "PT Sans", Arial, serif
  font-size 30px
  letter-spacing 0.025em
  font-weight 200
  color #ffffff
  text-decoration none
  position relative

  &::after
    content ""
    width 3px
    height 100%
    background-color white
    position absolute
    right 0
    bottom 0

  &:hover
    text-decoration underline


@media (max-width: $tablet)
  .navigation__list
    flex-direction column

  .navigation__link
    padding 10px
    display block

    &::after
      display none